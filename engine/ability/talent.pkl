module talent
extends "ability.pkl"
import "../types.pkl" as $t

ability_type = "faction-talent"
activation_type = "passive"

/// faction is required for talents
faction: $t.Faction

/// the talent level / rank / row number
level: TalentLevel
typealias TalentLevel = UInt(isBetween(1, 5))

/// which column this appears in in the ui. 1/2 are main factions, 3 is merc factions
column: TalentColumn
typealias TalentColumn = UInt(isBetween(1, 3))

/// usually this is a topbar ability, sometimes a building
unlocks: Listing<String>?
